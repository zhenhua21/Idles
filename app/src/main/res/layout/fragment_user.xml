<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/user_information"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/chunk_rb">

        <ImageView
            android:id="@+id/user_iv_img"
            android:layout_weight="2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/user_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Page3"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/user_tv_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Page3222"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_ly_mMessage"
        android:background="@drawable/chunk_r"
        style="@style/user_ly_R_settings">

        <TextView
            style="@style/user_tv_settings"
            android:text="我的消息" />

        <ImageView style="@style/setting_arrow" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/user_ly_mDeal"
        android:background="@drawable/chunk_r"
        style="@style/user_ly_R_settings">

        <TextView
            style="@style/user_tv_settings"
            android:text="我的购买" />

        <ImageView style="@style/setting_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_ly_mAddress"
        style="@style/user_ly_R_settings"
        android:background="@drawable/chunk_rb">

        <TextView
            style="@style/user_tv_settings"
            android:text="我的地址" />

        <ImageView style="@style/setting_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_ly_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/chunk_rb"
        android:layout_marginTop="30dp">

        <TextView
            style="@style/user_tv_settings"
            android:text="设置" />

        <ImageView style="@style/setting_arrow" />
    </LinearLayout>
</LinearLayout>