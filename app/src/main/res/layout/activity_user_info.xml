<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/user_info_ly_img"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:background="@drawable/chunk_r">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="头像"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/user_info_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="end|center_vertical"
            android:src="@mipmap/ic_launcher"/>
    </LinearLayout>

    <LinearLayout
        style="@style/user_ly_R_settings"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:background="@drawable/chunk_r">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="用户名"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/user_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:textSize="18sp"
            android:text="某人"/>
    </LinearLayout>

    <LinearLayout
        style="@style/user_ly_R_settings"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:background="@drawable/chunk_r">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="性别"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/user_info_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:textSize="18sp"
            android:text="未知"/>
    </LinearLayout>

    <LinearLayout
        style="@style/user_ly_R_settings"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:background="@drawable/chunk_r">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="年龄"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/user_info_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:text="未知"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        style="@style/user_ly_R_settings"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:background="@drawable/chunk_r">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手机号"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/user_info_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:textSize="18sp"
            android:text="未知"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_info_ly_introduce"
        style="@style/user_ly_R_settings"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:background="@drawable/chunk_r">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="介绍"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/user_info_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:textSize="18sp"
            android:text="未知"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:background="@drawable/chunk_r">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="收货地址"
            android:textColor="#000000"
            android:textSize="18sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/user_info_logout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_selector"
        android:text="退出登录"
        android:textSize="18sp"/>

</LinearLayout>